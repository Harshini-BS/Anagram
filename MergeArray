package com.mycompany.sortendmerge;
import java.util.*;
public class SortendMerge {

    public static void main(String[] args) {
        int[] a={1,3,5};
        int[] b={2,4,5};
        int[] merged=new int[a.length+b.length];
        System.arraycopy(a, 0, merged, 0, a.length);
        System.arraycopy(b, 0, merged, a.length,b.length);
        Arrays.sort(merged);
        System.out.println("Sorted and merged Array is:"+Arrays.toString(merged));
        
    }
}